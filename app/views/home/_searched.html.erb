<div class="col s4 offset-s3 search_result">
	<% if @ratings %>
		<img src=<%= @result["Poster"] %> alt="">
		<div class="info">
			<ul>
				<li class="projected"></li>
				<b><li class="title"><%= @result["Title"] %></li></b>
				<li class="plot"><%= @result["Plot"] %></li>
			</ul>
		</div>
		<div class="card">
			<p>Projected Rating <%= @projected %></p>
			<% if !@user_rating.nil? %>
				<p>Your Rating: <%= @user_rating.rating %></p>

				<ul>
					<li>IMDb: <%= @ratings[:imdb] %></li>
					<li>Metacritic: <%= @ratings[:meta] %></li>
					<li>Rotten Tomatoes: <%= @ratings[:rt] %></li>
				</ul>
			<% else %>
				<%= render partial: 'user_ratings/user_rating_form', locals: {result: @result, ratings: @ratings, projected: @projected} %>
			<% end %>
		</div>
	<% else %>
	<div class="not-found">
		<p>There wasn't a result for <%= params[:search] %>. You can try searching with a different spelling, or search using the IMDB ID.</p>
	</div>
	<% end %>
</div>

