<!DOCTYPE html>
<html>
  <head>
    <title>ProjectRating</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

	  <!-- Compiled and minified JavaScript -->
    <script src="https://use.fontawesome.com/a88f90b172.js"></script>
  </head>

  <body>
  	<!-- Dropdown Structure -->
		<ul id="dropdown1" class="dropdown-content">
  		<li><%= link_to "Edit Profile", edit_user_registration_path %></li>
		  <li class="divider"></li>
  		<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
		</ul>

  	<nav>
  		<div class="nav-wrapper deep-purple darken-3 row">
      	<%= link_to "Project Rating", root_path, class: 'brand-logo' %>
        	<div class="input-field search-input col s6 offset-s3">
            <%= form_tag(root_path, method: 'get') do %>
            	<%= text_field_tag :search, params[:search], :id => 'search', type: 'search', placeholder: "Search by Title" %>
          	<% end %>
            <label for="search"><i class="material-icons left">search</i></label>
          </div>
       	<ul class="right hide-on-med-and-down">
        	<% if user_signed_in? %>
		      	<li><a class="dropdown-button" href="#!" data-activates="dropdown1"><%= current_user.username %><i class="material-icons right">arrow_drop_down</i></a></li>
        	<% end %>
      	</ul>
    	</div>
  	</nav>

  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  	<div class="container">
  		<div class="row">
    		<%= yield %>
  		</div>
		</div>
  </body>
</html>
